<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTrip">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:text="Add Trip"
        android:textColor="@color/dark_blue"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/backBtn"
        app:layout_constraintTop_toBottomOf="@+id/backBtn" />

    <EditText
        android:id="@+id/nameTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Trip Name"
        android:inputType="textPersonName"
        android:textColor="@color/dark_blue"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/destinationTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Destination"
        android:inputType="textPersonName"
        android:textColor="@color/dark_blue"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/nameTxt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nameTxt"
        app:layout_constraintTop_toBottomOf="@+id/nameTxt"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/startTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:ems="8"
        android:focusable="false"
        android:hint="Start Date"
        android:inputType="date"
        android:textColor="@color/dark_blue"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/endTxt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/destinationTxt"
        app:layout_constraintTop_toBottomOf="@+id/destinationTxt"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/endTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="8"
        android:focusable="false"
        android:hint="End Date"
        android:inputType="date"
        android:textColor="@color/dark_blue"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/destinationTxt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/startTxt"
        app:layout_constraintTop_toTopOf="@+id/startTxt"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/backBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backBtn"
        app:srcCompat="@drawable/save_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>